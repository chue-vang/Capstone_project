@model HersFlowers.Models.ShoppingCartItem

@{
    ViewData["Title"] = "AddToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Product To Cart</h1>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCart" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label name="userInput" asp-for="Quantity" class="control-label">Quantity</label>
                <input type="text" asp-for="Quantity" class="form-control" placeholder="Enter Quantity"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Click to Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
