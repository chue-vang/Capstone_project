@model HersFlowers.Models.ViewModels.ShoppingCartFlowerViewModel

@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1>Products</h1>
<p>
    <a asp-action="Index" asp-route-id="@ViewBag.Id">Home</a> |
    <a asp-action="Edit" asp-route-id="@ViewBag.Id">Edit</a> |
    <a asp-action="Subscribe" asp-route-id="">Subscribe to Our Monthly Email</a> |
    <a asp-action="RequestMeeting" asp-route-id="">Request a Meeting</a> |
    <a asp-action="Product" asp-route-id="">Product</a> |
    <a asp-action="ShoppingCart" asp-route-id="">Shopping Cart</a> |
    <a asp-action="ViewOwnerSchedule" asp-route-id="">View Owner's Schedule</a>
</p>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Flowers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="AddToCart" asp-route-id="@item.Id">Add to Cart</a>
            </td>
        </tr>
}
    </tbody>
</table>
