@model HersFlowers.Models.Customer

@{
    ViewData["Title"] = "Subscribe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Subscribe To Our Monthly Email Service</h4>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Subscribe">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-check">
                <label asp-for="Subscribe" class="form-check-label">
                    <input asp-for="Subscribe" class="form-check-input" placeholder="Enter Your Email"/><br /><br />
                </label>
                <span asp-validation-for="Subscribe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
