@model IEnumerable<HersFlowers.Models.Request>

@{
    ViewData["Title"] = "FilterByDays";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Filter Your Meetings By the Day of the Week</h1>

<p>
    <a asp-action="Edit" asp-route-id="@ViewBag.Id">Edit Your Profile</a> |
    <a asp-action="FilterByDays" asp-controller="Owners">Filter Meetings by Day</a> |
    <a asp-action="EmailMonthlySubscriber">Check Monthly Email Subscriber</a> |
    <a asp-action="SendMonthlyEmail" asp-controller="Mail">Send Out Monthly Emails</a>
</p>

<select id="DayOfWeek" name="DayOfWeek" asp-items="Html.GetEnumSelectList<DayOfWeek>()">
    <option value="">Select a Day</option>

</select>

<div>
    <a asp-action="FilterByDays">Click to Filter</a> |
</div>


